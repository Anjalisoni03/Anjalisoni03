--------------------------------------------len of string.--------------------------------------
#include<iostream>
using namespace std;
int main()
{
    int i,len=0;
    char str[30];
    cout<<" input string: ";
    gets(str);
    for(i=0;str[i]!='\0';i++)
    {
        len++;
    }
    cout<<"length : "<<len;
    return 0;
}
------------------------------------------vowel or consonent------------------------------------------
#include<iostream>
using namespace std;
int main()
{
    char c;
    cin>>c;
    if(c=='a'||c=='e'||c=='i'||c=='o'||c=='u'||c=='A'||c=='E'||c=='I'||c=='O'||c=='U')
        cout<<c<<" is a vowel.";
    else
        cout<<c<<" is a consonent";
    return 0;
}
------------------------------------------character is alphabet or not----------------------------------
#include<iostream>
using namespace std;
int main()
{
    char c;
    cin>>c;
    if(65<=c && c<=90 || 97<=c && c<=122)
        cout<<c<<" is a alphabet";
    else
        cout<<c<<" is not a alphabet";
    return 0;
}
--------------------------------------------------ascii value or char------------------------------
#include<iostream>
using namespace std;
int main()
{
    char c;
    cin>>c;
    cout<<(int)c;
    return 0;
}
------------------------------------------------ toggle each character------------------------------
         ex.  abc=ABC
#include<iostream>
using namespace std;
int main()
{
    char c[30];
    gets(c);
    //string c;
    //cin>>c;
    for(int i=0;c[i]!='\0';i++)
    {
        if(c[i]>=65 && c[i]<=90)
        {
            c[i] += 32;
            cout<<c[i];
        }
        else if(c[i]>=97 && c[i]<=122)
        {
            c[i] -= 32;
            cout<<c[i];
        }
    }
    return 0;
}
------------------------------------------------count number of vowels-------------------------------
#include<iostream>
#include<string>
using namespace std;
int main()
{
    int count=0;
    string c;
    cin>>c;
    for(int i=0;c[i]!='\0';i++)
    {
        if(c[i]=='a'||c[i]=='e'||c[i]=='i'||c[i]=='o'||c[i]=='u'||c[i]=='A'||c[i]=='E'||c[i]=='I'||c[i]=='O'||c[i]=='U')
        {
            count++;
        }
    }
    cout<<c<<" have "<<count<<" vowel.";
    return 0;
}
---------------------------------------------------remove vowels-------------------------------------------------
#include<iostream>
#include<string>
using namespace std;
int main()
{
    string str;
    cin>>str;
    int n=str.size();
    for(int i=0;i<n;i++)
    {
        if(str[i]=='a' || str[i]=='e' || str[i]=='i' || str[i]=='o' || str[i]=='u' || str[i]=='A' || str[i]=='E' || str[i]=='I' || str[i]=='O' || str[i]=='U')
        {
            for(int j=i;j<n;j++)
            {
                str[j]=str[j+1];
            }
            n--;
            i--;
        }
    }
    cout<<str;
    return 0;
}
----------------------------------------------------string is palindrome or not-----------------------
#include<iostream>
#include<string.h>
using namespace std;
int main()
{
    string s;
    cin>>s;
    int n=s.size();
    int i=0,j=n-1,count=0;
    //bool flag=true;
    while(i<=j)
    {
        if(s[i++]==s[j--])
        {
            continue;
        }
        else
        {
           count++;//flag=false;
           break;
        }
    }
    if(count<=0) //flag==true
    {
        cout<<"Pal";
    }
    else{
        cout<<"np";
    }
}
--------------------------------------------reverse of string---------------------------
#include<iostream>
#include<string.h>
using namespace std;
int main()
{
    string s;
    cin>>s;
    int n=s.size(),i=n-1;
    while(i>=0)
    {
        cout<<s[i];
        i--;
    }
}
----------------------------------------------------remove all characters except alphabet---------------
#include<iostream>
#include<string.h>
using namespace std;
int main()
{
    string s;
    cin>>s;
    int n=s.size(),i=0;
    for(i=0;i<n;i++)
    {
        if(65<=s[i] && s[i]<=90 || 97<=s[i] && s[i]<=122)
        {
            continue;
        }
        else
        {
            for(int j=i;j<n;j++)
            {
                s[j]=s[j+1];
            }
            i--;
            n--;
        }
    }
    cout<<s;
}
-------------------------------------------remove spaces-----------------------
#include<iostream>
#include<string.h>
using namespace std;
int main()
{
    char s[]="prep insta gr a m";
    int i=0,j=0;
    while(s[i])
    {
        if(s[i]!=' ')
        {
            s[j++]=s[i];
        }
        i++;
    }
    s[j]='\0';
    cout<<s;
    return 0;
}
----------------------------------------remove brackets--------------------------
#include<iostream>
using namespace std;
int main()
{
    char expn[]="(a+b)-c*(d)";
    int i=0;
    while(expn[i])
    {
        if(expn[i]=='(' || expn[i]==')')
        {
            for(int j=i;expn[j]!='\0';j++)
            {
                expn[j]=expn[j+1];
            }
        }
            i++;
        }
    cout<<expn;
    return 0;
}
------------------------------------------adding numbers in a string---------------
#include<iostream>
using namespace std;
int main()
{
    char s[]="ab34s12";
    int sum=0;
    for(int i=0;s[i]!='\0';i++)
    {
        if(s[i]>='0' && s[i]<='9')
        {
           sum += s[i]-'0';             // ascii value of 0 is 48 so we subtracted '0' from sum
        }
    }
    cout<<sum;
    return 0;
}
---------------------------------------count frequency of characters----------------
#include<bits/stdc++.h>
using namespace std;
int main()
{
    string s ="sushi and shusha";
    int n=s.size(),count;
    int visited[n];
    for(int i=0; s[i]!='\0';i++)
    {
        int count=1;
        if(visited[i]!=1)
        {
            for(int j=i+1;j<n;j++)
            {
                if(s[i]==s[j])
                {
                    count++;
                    visited[j]=1;
                }
            }
        cout<<s[i]<<" occured "<<count<<" times "<<endl;
        }
    }
    return 0;
}
--------------------------------------------capital first and last alphabet----------------------------------
#include<bits/stdc++.h>
using namespace std;
int main()
{
    string s ="shut ups";
    int n=s.size();
    cout<<n<<endl;
    for(int i=0;i<n;i++)
    {
        int k=i;
        while(i<n && s[i]!=' ')
        {
            i++;
        }
        s[k]=(char)(s[k]>='a' && s[k]<='z' ? ((int)s[k]-32):(int)s[k]);
        s[i-1]=(char)(s[i-1]>='a' && s[i-1]<='z' ? ((int)s[i-1]-32):(int)s[i-1]);
    }
    cout<<s;
    return 0;
}
-----------------------------------------------non-repeating characters----------------------------------
#include<bits/stdc++.h>
using namespace std;
int main()
{
    string s ="abcd";
    int n=s.size(),count;
    int visited[n];
    for(int i=0; s[i]!='\0';i++)
    {
        int count=1;
        if(visited[i]!=1)
        {
            for(int j=i+1;j<n;j++)
            {
                if(s[i]==s[j])
                {
                    count++;
                    visited[j]=1;
                }
            }
        if(count==1)
        {
            cout<<s[i]<<" ";
        }
        }
    }
    return 0;
}
